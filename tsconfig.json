{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": false,
    "sourceMap": true,
    "outDir": "build",
    "strict": true,
    "isolatedModules": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "src/*": ["src/*"]
    }
  },
  "exclude": ["index.js", "node_modules", "build"]
}
